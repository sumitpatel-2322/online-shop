<%-include('../../shared/includes/head',{pageTitle:'Signup'})%>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%-include('../../shared/includes/header')%>
    <main>
        <h1>Create a new Account</h1>
        <% if(inputData.errorMessage) {%>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%=inputData.errorMessage%></p>
            </section>
        <%}%>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>">
            <p>
                <label for="email">Enter Email</label>
                <input type="email" name="email" id="email" value="<%=inputData.email%>" required>
            </p>
            <p>
                <label for="confirm-email">Enter Email again</label>
                <input type="email" name="confirm-email" id="confirm-email" value="<%=inputData.confirmEmail%>" required>
            </p>
            <p>
                <label for="password">Enter a Password</label>
                <input type="password" name="password" id="password" minlength="8" value="<%=inputData.password%>" required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" value="<%=inputData.name%>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%=inputData.street%>" required>
            </p>
             <p>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal"  id="postal" minLength="6"  maxLength="6" value="<%=inputData.postal%>" required>
            </p>
             <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%=inputData.city%>" required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form">
                <a href="/login">Login Instead</a>
            </p>
        </form>
    </main>
<%-include('../../shared/includes/footer')%>